<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Billing"
    android:background="@color/White"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/carname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/t8"
        android:layout_centerHorizontal="true"
        android:text="INDICA"
        android:textColor="@color/LightGreen"
        android:textSize="34dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/seat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="97dp"
        android:text="4+1"
        android:textColor="@color/Gray"
        android:textSize="21dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="A/C &amp; Non - A/C"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/seat"
        android:layout_centerHorizontal="true"
        android:textSize="21dp"
        android:textStyle="bold"
        android:textColor="@color/Gray"
        />

    <TextView
        android:id="@+id/fr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="201dp"
        android:text="FROM"
        android:textAlignment="center"
        android:textColor="@color/Gray"
        android:textSize="15dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/spoint"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fr"
        android:layout_marginTop="10dp"
        android:text="K.K Nagar Main Road,Tiruchirappalli"
        android:textColor="@color/Gray"
        android:layout_centerHorizontal="true"
        android:textSize="12dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/to"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="TO"
        android:layout_below="@+id/spoint"
        android:textColor="@color/Gray"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/epoint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/to"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Thillai Nagar 9th Cross Street,Tiruchirappalli"
        android:textAlignment="center"
        android:textColor="@color/Gray"
        android:textSize="12dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/t8"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/OrangeRed"
        android:textSize="20dp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="63dp">


        <Button
            android:id="@+id/callnow"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/epoint"

            android:background="@color/LightGreen"
            android:text="Book Now"
            android:textColor="@color/White" />

        <Button
            android:id="@+id/booknow"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/epoint"
            android:layout_marginLeft="30dp"
            android:background="@color/Crimson"
            android:text="Call Now"
            android:textColor="@color/White" />

    </LinearLayout>


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="0dp" />
</RelativeLayout>