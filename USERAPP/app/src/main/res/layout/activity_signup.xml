<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/fn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:paddingLeft="60sp"
            android:hint="NAME"
            android:textSize="15dp"
            android:background="@drawable/cetext"
            />

        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_person_grey_24dp"
            android:textColor="@color/White"
            android:textSize="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="15dp"
            />









        <EditText
            android:id="@+id/email"
            android:layout_below="@+id/fn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:paddingLeft="60dp"
            android:hint="EMAIL"
            android:textSize="15dp"
            android:background="@drawable/cetext"
            />


        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_email_black_24dp"
            android:textColor="@color/White"
            android:textSize="16dp"
            android:layout_below="@id/fn"
            android:layout_marginTop="31dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="15dp"

            />
        <EditText
            android:id="@+id/Phoneno"
            android:layout_below="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:paddingLeft="60dp"
            android:hint="MOBILE NUMBER"
            android:textSize="15dp"
            android:background="@drawable/cetext"
            />


        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_phone_iphone_black_24dp"
            android:textColor="@color/White"
            android:textSize="16dp"
            android:layout_below="@id/email"
            android:layout_marginTop="31dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="15dp"
            />
        <Spinner
            android:id="@+id/gend"
            android:layout_below="@+id/Phoneno"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:paddingLeft="60dp"
            android:hint="GENDER"
            android:textSize="15dp"
            android:background="@drawable/cetext"
            />

        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_person_pin_black_24dp"
            android:textColor="@color/White"
            android:textSize="16dp"
            android:layout_below="@id/Phoneno"
            android:layout_marginTop="31dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="15dp"
            />

        <EditText
            android:id="@+id/DOB"
            android:layout_below="@+id/gend"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:paddingLeft="60dp"
            android:hint="DOB"
            android:textSize="15dp"
            android:background="@drawable/cetext"
            />


        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_perm_contact_calendar_black_24dp"
            android:textColor="@color/White"
            android:textSize="16dp"
            android:layout_below="@id/gend"
            android:layout_marginTop="31dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="15dp"
            />



   <!--
-->
        <EditText
            android:id="@+id/pass"
            android:layout_below="@+id/DOB"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:paddingLeft="60dp"
            android:hint="PASSWORD"
            android:textSize="15dp"
            android:background="@drawable/cetext"
            />


        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_lock_open_black_24dp"
            android:textColor="@color/White"
            android:textSize="16dp"

            android:layout_below="@id/DOB"
            android:layout_marginTop="31dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="25dp"
            />



        <EditText
            android:id="@+id/confirmpass"
            android:layout_below="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:paddingLeft="60dp"
            android:hint="CONFIRM PASSWORD"
            android:textSize="15dp"
            android:background="@drawable/cetext"
            />

        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_lock_open_black_24dp"
            android:textColor="@color/White"
            android:textSize="16dp"
            android:layout_below="@id/pass"
            android:layout_marginTop="31dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="15dp"
            />


        <EditText
            android:id="@+id/doorno"
            android:layout_below="@+id/confirmpass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:paddingLeft="60dp"
            android:hint="DOOR NO"
            android:textSize="15dp"
            android:background="@drawable/cetext"
            />
        <EditText
            android:id="@+id/street"
            android:layout_below="@+id/doorno"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:paddingLeft="60dp"
            android:hint="Street"
            android:textSize="15dp"
            android:background="@drawable/cetext"
            />
        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_recent_actors_black_24dp"
            android:textColor="@color/White"
            android:textSize="16dp"
            android:layout_below="@id/doorno"
            android:layout_marginTop="31dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="15dp"
            />
        <EditText
            android:id="@+id/city"
            android:layout_below="@+id/street"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:paddingLeft="60dp"
            android:hint="District "
            android:textSize="15dp"
            android:background="@drawable/cetext"
            />
        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_recent_actors_black_24dp"
            android:textColor="@color/White"
            android:textSize="16dp"
            android:layout_below="@id/street"
            android:layout_marginTop="31dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="15dp"
            />

        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_recent_actors_black_24dp"
            android:textColor="@color/White"
            android:textSize="16dp"
            android:layout_below="@id/confirmpass"
            android:layout_marginTop="31dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="15dp"
            />


        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/cebutton"
            android:layout_marginTop="18dp"
            android:layout_marginRight="15dp"
            android:text="REGISTER"
            android:id="@+id/but"
            android:textColor="@color/White"
            android:textSize="16dp"
            android:layout_below="@+id/city"
            />


    </RelativeLayout>

</ScrollView>